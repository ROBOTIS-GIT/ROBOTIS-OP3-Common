<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!--
  <xacro:property name="pi" value="3.141592654" />
  -->

  <!-- head -->
  <xacro:macro name="robotis_op3_head" params="parent">

  <!-- head yaw joint -->
  <joint name="head_pan" type="revolute">
    <parent link="${parent}"/>
    <child link="head_pan_link"/>
    <origin xyz="-0.001 0.0 0.1365" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit effort="1000" velocity="100" lower="${-pi*0.9}" upper="${pi*0.9}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint>
  <xacro:insert_transmission name="head_pan" />

  <!-- head yaw link -->
  <link name="head_pan_link">
    <visual>
      <xacro:insert_mesh_head_pan_link />
    </visual>
    <collision>
      <xacro:insert_mesh_head_pan_link />
    </collision>
    <inertial>
      <xacro:insert_inertia_head_pan_link />
    </inertial>
  </link>

  <!-- head tilt joint -->
  <joint name="head_tilt" type="revolute">
    <parent link="head_pan_link"/>
    <child link="head_tilt_link"/>
    <origin xyz="0.010 0.019 0.0285" rpy="0 0 0" />
    <axis xyz="0 -1 0" />
    <limit effort="1000" velocity="100" lower="${-pi*0.9}" upper="${pi*0.9}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint>
  <xacro:insert_transmission name="head_tilt" />

  <!-- head tilk link -->
  <link name="head_tilt_link">
    <visual>
      <xacro:insert_mesh_head_tilt_link />
    </visual>
    <collision>
      <xacro:insert_mesh_head_tilt_link />
    </collision>
    <inertial>
      <xacro:insert_inertia_head_tilt_link />
    </inertial>
  </link>

  <!-- camera gazebo joint -->
  <joint name="cam_gazebo" type="fixed">
    <origin xyz="0.01425 -0.019 0.04975" rpy="0 0 0"/>
    <parent link="head_tilt_link"/>
    <child link="cam_gazebo_link"/>
  </joint>

  <!-- camera gazebo link -->
  <link name="cam_gazebo_link">
  </link>

  <xacro:include filename="$(find realsense2_camera)/urdf/_d435.urdf.xacro"/>
  <sensor_d435 parent="head_tilt_link">
    <!-- <origin xyz="0.018 0 0.05275" rpy="${pi*0.5} ${-pi*0.5} 0"/> -->
    <origin xyz="-0.0041 -0.019 0.04025" rpy="0 0 0"/>
  </sensor_d435>

  </xacro:macro>

</robot>
